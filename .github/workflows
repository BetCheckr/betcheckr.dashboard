name: Pull Request Check

on:
  pull_request:
    branches:
      - main   # o cualquier rama principal que uses

jobs:
  lint-and-test:
    runs-on: ubuntu-latest  # puedes usar cualquier otro sistema operativo

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18.17.0'  # o cualquier versión de Node.js que estés usando

    - name: Install dependencies
      run: pnpm install

    - name: Run Linter
      run: pnpm run lint

    - name: Run Tests with Coverage
      run: pnpm run test

    - name: Upload Jest Coverage Report (optional)
      uses: actions/upload-artifact@v3
      with:
        name: jest-coverage
        path: ./coverage
